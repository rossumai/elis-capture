{
  "extends": ["tslint:recommended", "tslint-react", "tslint-react-hooks", "tslint-config-prettier"],
  "rules": {
    "interface-name": [false],
    "interface-over-type-literal": false,
    "jsx-no-lambda": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "react-hooks-nesting": {
      "severity": "error",
      "options": {
        "detect-hooks-from-non-react-namespace": true
      }
    },
    "no-any": {
      "severity": "error"
    },
    "no-console": {
      "severity": "warning"
    }
  },
  "jsRules": {
    "no-console": {
      "severity": "warning"
    },
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": ["src/legacy/**/*.js", "config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
  }
}
